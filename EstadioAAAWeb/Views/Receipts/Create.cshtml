@model EstadioAAAWeb.Models.Receipt

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Boleta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReceiptUUID" class="control-label"></label>
                <input asp-for="ReceiptUUID" class="form-control" />
                <span asp-validation-for="ReceiptUUID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketUUID" class="control-label"></label>
                <select asp-for="TicketUUID" class ="form-control" asp-items="ViewBag.TicketUUID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label"></label>
                <input asp-for="TotalCost" class="form-control" />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
