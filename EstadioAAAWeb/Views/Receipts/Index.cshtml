@model IEnumerable<EstadioAAAWeb.Models.Receipt>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.TicketUUID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReceiptUUID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReceiptUUID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReceiptUUID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
