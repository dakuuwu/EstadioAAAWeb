@model EstadioAAAWeb.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketUUID" />
            <div class="form-group">
                <label asp-for="UserRUT" class="control-label"></label>
                <input asp-for="UserRUT" class="form-control" />
                <span asp-validation-for="UserRUT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventUUID" class="control-label"></label>
                <select asp-for="EventUUID" class="form-control" asp-items="ViewBag.EventUUID"></select>
                <span asp-validation-for="EventUUID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
